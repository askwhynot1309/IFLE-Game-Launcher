<Window x:Class="IFLEGameLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IFLEGameLauncher"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">
    <Grid>
        <!-- Main Grid Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Enlarged Left Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Left Sidebar for Game List -->
        <StackPanel Grid.Column="0" Background="#f0f0f0" Margin="5" Height="Auto">
            <TextBlock Text="Game List" FontSize="20" FontWeight="Bold" Margin="10"/>
            <ListBox x:Name="GameListBox" Height="204" SelectionChanged="GameListBox_SelectionChanged">
                <ListBoxItem Content="Math Game" Height="50"/>
                <ListBoxItem Content="English Game" Height="50"/>
                <ListBoxItem Content="Run to Win" Height="50"/>
                <ListBoxItem Content="Balloon Pop Game" Height="50"/>
            </ListBox>
        </StackPanel>

        <!-- Main Content Area -->
        <StackPanel Grid.Column="1" Margin="10">
            <!-- Game Image -->
            <Image x:Name="GameImage" Height="300" Stretch="Uniform" Margin="0,0,0,10"/>

            <!-- Game Description -->
            <TextBlock x:Name="GameDescription" Text="Select a game to see details..." FontSize="16" TextWrapping="Wrap" Margin="0,0,0,10" Height="100"/>

            <!-- Download and Play Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Download" Width="100" Margin="5" Click="DownloadGame_Click"/>
                <Button Content="Play" Width="100" Margin="5" Click="PlayGame_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
