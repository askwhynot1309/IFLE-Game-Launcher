<Window x:Class="IFLEGameLauncher.CameraAdjustWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IFLEGameLauncher"
        mc:Ignorable="d"
        Title="CameraAdjustWindow" Height="300" Width="300">
    <Grid Background="LightGray">
         
        <TextBox x:Name="FloorWidth" TextWrapping="Wrap" Text="Chiều rộng sàn" Margin="84,41,84,210"/>
        <TextBox x:Name="CameraToFloor" TextWrapping="Wrap" Text="Khoảng cách cam tới sàn" Margin="84,150,84,101"/>
        <TextBox x:Name="FloorLength" TextWrapping="Wrap" Text="Chiều dài sàn" Margin="84,94,84,157"/>
        <Button Content="Button" Margin="84,203,84,25" Click="SaveButton_Click"/>

    </Grid>
</Window>
