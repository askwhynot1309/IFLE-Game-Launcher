<Window x:Class="IFLEGameLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IFLEGameLauncher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="700" Width="900">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="LightBlue" Offset="0.0"/>
                <GradientStop Color="DarkBlue" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <!-- Main Grid Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <!-- Enlarged Left Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Content -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0"
            Background="#E6EAF0"
            Margin="19,39,1,38"
            Height="Auto" Grid.RowSpan="2">

            <TextBlock Text="🎮 Danh sách game"
               FontSize="22"
               FontWeight="Bold"
               Foreground="#283E51"
               Margin="0,0,0,10"
               TextAlignment="Center"/>

            <ListBox x:Name="GameListBox"
             Height="337"
             Background="White"
             BorderBrush="Transparent"
             Padding="5"
             ScrollViewer.VerticalScrollBarVisibility="Auto"
             SelectionChanged="GameListBox_SelectionChanged">

                <!-- Hover Effect -->
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="#283E51"/>
                        <Setter Property="FontSize" Value="18"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Cursor" Value="Hand"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4B79A1"/>
                                <Setter Property="Foreground" Value="#0077b6"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="10"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#00C853"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>

                <!-- Game List Items hardcode for test -->
                <!--<ListBoxItem Content="Math Game"/>
                <ListBoxItem Content="English Game"/>
                <ListBoxItem Content="Run Game"/>
                <ListBoxItem Content="Balloon Pop Game"/>-->
            </ListBox>
            <TextBlock x:Name="DownloadPathText"
                       Text="Current Save:"
                       Foreground="Black"
                       FontSize="14"
                       TextWrapping="WrapWithOverflow" Height="44"/>
            <Button Content="Chọn nơi tải game" Background="#3776A1" Height="45" Foreground="White" FontSize="16" Click="ChooseDownloadLocation_Click" Width="210" Margin="10">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="#4B79A1"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="8"/>
                            </Setter.Value>
                        </Setter>

                        <!-- Hover Effect -->
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#355C7D"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" Opacity="0.6" BlurRadius="12"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#283E51"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <StackPanel Orientation="Horizontal" Margin="1,10,10,0" HorizontalAlignment="Left" Width="230">
                <Button Content="Kiểm tra thiết bị" Margin="10,10,10,0" Grid.Row="1" Width="93" Height="31" Click="DeviceCheck_Click"/>
                <Button Content="Đăng xuất" Background="IndianRed" Margin="10,10,10,0" Grid.Row="1" VerticalAlignment="Top" Width="93" Height="30" Click="LogOut_Click" RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="0"/>
                            <RotateTransform/>
                            <TranslateTransform Y="0"/>
                        </TransformGroup>
                    </Button.RenderTransform>
                </Button>
            </StackPanel>


            <TextBox HorizontalAlignment="Left" Margin="10,5" Grid.Row="1" TextWrapping="Wrap" Text="" Width="210" Height="31" x:Name="DeviceGUID" Grid.ColumnSpan="2" />

        </StackPanel>
        <Button Content="← Quay lại"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="18,10,0,0"
                Padding="5,2"
                FontWeight="Bold"
                Foreground="White"
                Background="#3366CC"
                BorderThickness="0"
                Cursor="Hand" Height="25" Width="70" Click="Button_Click"
                />

        <!-- Main Content Area -->
        <StackPanel Grid.Column="1" Margin="10">
            <!-- Game Image -->

            <!-- Game Description -->
            <!-- Game Image -->
            <Image x:Name="GameImage" Height="300" Stretch="Uniform" Width="500"/>

            <!-- Game Description -->

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <!--Uninstall Button-->
                <Button x:Name="UninstallButton"
                        Content="Uninstall"
                        Width="150"
                        Height="40"
                        Margin="5"
                        Click="UninstallGame_Click"
                        Visibility="Collapsed"
                        Background="Red"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        BorderBrush="Transparent">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#00C853"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="8"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border CornerRadius="10"
                    Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <!-- Hover Effect -->
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#009624"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="Black" Opacity="0.6" BlurRadius="12"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#006400"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Download Button -->
                <Button x:Name="DownloadButton" Content="Download"
                        Width="150"
                        Height="40"
                        Margin="5"
                        Click="DownloadGame_Click"
                        Background="#4B79A1"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        BorderBrush="Transparent"
                        Visibility="Collapsed">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#4B79A1"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="8"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border CornerRadius="10"
                                    Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <!-- Hover Effect -->
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#355C7D"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="Black" Opacity="0.6" BlurRadius="12"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#283E51"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="UpdateButton" Content="Update"
                    Width="150"
                    Height="40"
                    Margin="5"
                    Click="DownloadGame_Click"
                    Background="GreenYellow"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    BorderBrush="Transparent"
                    Visibility="Collapsed">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#4B79A1"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="8"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border CornerRadius="10"
                    Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <!-- Hover Effect -->
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#355C7D"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="Black" Opacity="0.6" BlurRadius="12"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#283E51"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Play Button -->
                <Button x:Name="PlayButton" Content="Play"
                        Width="150"
                        Height="40"
                        Margin="5"
                        Click="PlayGame_Click"
                        Background="#00C853"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        BorderBrush="Transparent"
                        Visibility="Collapsed">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#00C853"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Black" Opacity="0.4" BlurRadius="8"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border CornerRadius="10"
                                    Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <!-- Hover Effect -->
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#009624"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="Black" Opacity="0.6" BlurRadius="12"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#006400"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>



            </StackPanel>
            <TextBlock x:Name="GameDescription" Text="Select a game to see more details..." FontSize="16" TextWrapping="Wrap" Height="100" Foreground="White"/>

        </StackPanel>

    </Grid>
</Window>
